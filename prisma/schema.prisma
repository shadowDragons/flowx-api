generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Project {
  id        Int      @default(autoincrement()) @id
  title     String
  description String
  tags ProjectTag[]
  imgs ProjectImg[]
  skills Skill[]
  status    Boolean    @default(true)
}

model ProjectTag {
  id        Int      @default(autoincrement()) @id
  name     String
  projects  Project[]      // 声明与 Project 模型的一对多关系
}

model ProjectImg {
  id        Int      @default(autoincrement()) @id
  path     String
  is_main Boolean    @default(false)
  projects  Project[]      // 声明与 Project 模型的一对多关系
}

model Skill {
  id        Int      @default(autoincrement()) @id
  name     String
  projects  Project[]      // 声明与 Project 模型的一对多关系
}


model User {
  id        Int      @default(autoincrement()) @id
  username     String @unique
  pass String
  salt String
  roles Role[]
  status    Boolean    @default(true)
}

model Role {
  id        Int      @default(autoincrement()) @id
  name     String
  users  User[]      // 声明与 User 模型的一对多关系
}
